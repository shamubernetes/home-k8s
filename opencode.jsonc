{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "flux-operator-mcp": {
      "type": "local",
      "command": [
        "flux-operator-mcp",
        "serve"
      ],
      "environment": {
        "KUBECONFIG": "./kubernetes/kubeconfig"
      }
    },
    "kubernetes-mcp-server": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "kubernetes-mcp-server@latest"
      ]
    },
    "github": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "dotenv-cli",
        "-e",
        "./.env.local",
        "--",
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ]
    },
    "unifi": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "dotenv-cli",
        "-e",
        "./.env.local",
        "--",
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "UNIFI_HOST",
        "-e",
        "UNIFI_USERNAME",
        "-e",
        "UNIFI_PASSWORD",
        "-e",
        "UNIFI_PORT",
        "-e",
        "UNIFI_SITE",
        "-e",
        "UNIFI_VERIFY_SSL",
        "ghcr.io/sirkirby/unifi-network-mcp:latest"
      ],
      "environment": {
        "UNIFI_HOST": "10.0.10.1",
        "UNIFI_PORT": "443",
        "UNIFI_SITE": "default",
        "UNIFI_VERIFY_SSL": "False"
      }
    }
  }
}
