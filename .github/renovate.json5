{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  timezone: "America/New_York",
  dependencyDashboard: true,
  pruneStaleBranches: true,
  rebaseWhen: "behind-base-branch",
  platformAutomerge: true,
  // Disable automatic reviewer assignment globally - only add for non-automerge PRs via packageRules
  reviewersFromCodeOwners: false,
  assigneesFromCodeOwners: false,
  extends: [
    "config:best-practices",
    "github>shamubernetes/home-k8s//.github/renovate/fileMatch.json5",
    "github>shamubernetes/home-k8s//.github/renovate/noPin.json5",
    "github>shamubernetes/home-k8s//.github/renovate/customDatasources.json5",
    "github>shamubernetes/home-k8s//.github/renovate/customManagers.json5",
    "github>shamubernetes/home-k8s//.github/renovate/packageRules.json5",
    "github>shamubernetes/home-k8s//.github/renovate/commitmessages.json5",
  ],
  labels: ["renovate"],
  prCreation: "immediate",
  vulnerabilityAlerts: {
    enabled: true,
    labels: ["security"],
  },
}
