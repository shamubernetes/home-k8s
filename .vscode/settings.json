{
  "editor.defaultFormatter": "trunk.io",
  "editor.formatOnSave": true,
  "git.enableSmartCommit": true,
  "git.ignoreLimitWarning": true,
  "gitlens.advanced.fileHistoryFollowsRenames": true,
  "gitlens.codeLens.enabled": false,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "sops.defaults.ageKeyFile": "age.key",
  "sops.configPath": ".sops.yaml",
  "terminal.integrated.scrollback": 100000,
  "workbench.list.horizontalScrolling": true,
  // File Types
  "[markdown]": {
    "editor.fontLigatures": false
  },
  "[yaml]": {
    "editor.fontLigatures": false
  },
  // Extension Settings
  "files.associations": {
    "*.json5": "json5",
    "./ansible/**/*.sops.yaml": "yaml",
    "./ansible/**/*.yaml": "ansible",
    "./ansible/**/inventory/**/*.yaml": "yaml",
    "./kubernetes/**/*.sops.toml": "plaintext",
    ".TODO": "markdown"
  },
  "material-icon-theme.folders.associations": {
    ".taskfiles": "utils",
    "bootstrap": "import",
    "cert-manager": "guard",
    "charts": "kubernetes",
    "external-secrets": "keys",
    "hack": "scripts",
    "kube-system": "kubernetes",
    "monitoring": "event",
    "networking": "connection",
    "repositories": "database",
    "rook-ceph": "dump",
    "terraforms": "terraform",
    "vars": "other",
    "controlplane": "controller"
  },
  "vs-kubernetes": {
    "vs-kubernetes.knownKubeconfigs": [
      "./kubeconfig"
    ],
    "vs-kubernetes.kubeconfig": "./kubernetes/kubeconfig"
  },
  "yaml.customTags": [
    "!secret scalar",
    "!env_var scalar"
  ],
  "yaml.schemas": {
    "file:///Users/kilian/.vscode/extensions/atlassian.atlascode-3.0.10/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml",
    // This just lets this file not have random errors from the autoloaded schema
    "https://json.schemastore.org/yamllint.json": "talos/patches/controlplane/cluster.yaml"
  },
}
